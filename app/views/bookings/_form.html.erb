<%= form_for @booking, remote: remote  do |f| %>
  <fieldset>
    <legend><%= header %></legend>
    <ul>
      <li>
        <%= f.label :username, "Players" %>
        <span>
          <%= @booking.players || current_user.full_name %>
        </span>
      </li>
      <li class="time-and-place">
        <%= @booking.time_and_place %>
      </li>
      <%= f.hidden_field :court_id %>
      <%= f.hidden_field :date_from %>
      <%= f.hidden_field :time_from %>
      <%= f.hidden_field :time_to %>
      <% allow?(:users, :index) do %>
        <li>
          <%= f.label :opponent_name, "Opponent" %>
          <%= f.text_field :opponent_name, data: {autocomplete_source: users_path} %>
        </li>
      <% end %>
    <%= f.submit "Submit booking", class: "submit-55-right" %>
    </ul>
  </fieldset>
<% end %>