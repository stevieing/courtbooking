<article id="manageevents">
	<table class="admin-table">
		<caption>Manage Events</caption>
		<tr>
			<td colspan="8">
				<%= link_to "Add new event", new_admin_event_path %>
			</td>
		</tr>
		<tr>
			<th>id</th>
			<th>Description</th>
			<th>Date from</th>
			<th>Time from</th>
      <th>Time to</th>
      <th>Court Numbers</th>
			<th>&nbsp;</th>
      <th>&nbsp;</th>
		</tr>

		<% events.each do |event| %>
			<tr id="<%= dom_id(event) %>">
				<td><%= event.id %></td>
				<td><%= event.description %></td>
				<td><%= event.date_from %></td>
				<td><%= event.time_from %></td>
        <td><%= event.time_to %></td>
        <td><%= event.court_numbers %></td>
				<td><%= link_to "Edit", edit_admin_event_path(event) %></td>
				<td><%= link_to "Delete", admin_event_path(event), method: :delete, data: {confirm: "Are you sure?"} %></td>
			</tr>
		<% end %>
	</table>
</article>