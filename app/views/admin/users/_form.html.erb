<%= form_for @manage_user_form, url: resource do |f| %>
	<fieldset>
		<legend><%= header %></legend>
		<ul>
			<li>
				<%= f.label :username, "Username" %>
				<%= f.text_field :username %>
			</li>
			<li>
				<%= f.label :full_name, "Full name" %>
				<%= f.text_field :full_name %>
			</li>
			<li>
				<%= f.label :email, "Email" %>
				<%= f.email_field :email %>
			</li>
			<li>
				<%= f.label :password, "Password" %>
				<%= f.password_field :password %>
			</li>
			<li>
				<%= f.label :password_confirmation, "Password confirmation" %>
				<%= f.password_field :password_confirmation %>
			</li>
			<li>
				<%= f.label :mail_me, "Mail me" %>
				<%= f.check_box :mail_me %>
			</li>
		</ul>
		<%= render "permissions", f: f, object: @manage_user_form %>
		<ul class="submit"><li><%= f.submit "Submit user" %></li></ul>
	</fieldset>
<% end %>