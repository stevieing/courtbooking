<ul id="<%= id %>">
  <li>
    <%= f.label :day %>
    <%= f.collection_select :day, Date.days_of_week, :last, :first %>
  </li>
  <li>
    <%= f.label :time_from, "From" %>
    <%= f.select :time_from, slots_except_last %>
  </li>
  <li>
    <%= f.label :time_to, "To" %>
    <%= f.select :time_to, slots_except_first %>
  </li>
  <li>
    <a class='remove-fields' href='#'>Remove</a>
  </li>
</ul>